{
  "name": "app-js",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "start": "node --watch ./dist/bin/www",
    "start:old": "node --watch ./old/bin/www",
    "start:fw": "run-p -l start watch",
    "start:fnw": "run-s build start",
    "watch": "run-p -rl watch:ts watch:nonts",
    "watch:ts": "tsc -w",
    "watch:nonts": "tscp -w",
    "build": "run-s build:ts build:nonts",
    "build:ts": "tsc",
    "build:nonts": "tscp",
    "clear": "rimraf dist",
    "lint": "prettier --write ./src"
  },
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.18.1",
    "http-errors": "~1.6.3",
    "mongoose": "^6.8.4",
    "morgan": "~1.9.1",
    "node-fetch": "^2.6.1",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/debug": "^4.1.7",
    "@types/express": "^4.17.15",
    "@types/http-errors": "^2.0.1",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.11.18",
    "concurrently": "^7.6.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.8.3",
    "rimraf": "^4.1.1",
    "typescript": "^4.9.4",
    "typescript-cp": "^0.1.7"
  }
}
